/* pages/Comic-Watch/Comic-Watch.wxss */
@import '/pages/Comic/Comic.wxss';

.container2 {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx 20rpx;
  background-color: rgb(241, 227, 206);
}
.box {
  width: 100%;
  height: 400rpx;
  display: flex;
  margin-top: 140rpx;
  background-color: rgba(250, 200, 131, 0.678);
}

.box1 {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 10px;
  margin-bottom: 0px;
  border: 1px solid #000000;
  /* background-color: aliceblue; */
}

.cover {
  width: 300rpx;
  height: 100%;
  border: 1px solid #000000;
}

.title-inform {
  width: 70%;
  height: 100%;
  display: flex;
  flex-direction: column;
  /* background-color: cornflowerblue; */
}

.h1 {
  padding: 40rpx;
  font-size: 44rpx;
  color: #222;
  font-weight: 500;
}
.h2 {
  padding: 20rpx;
  font-size: 28rpx;
  color: #222;
}
.h3 {
  padding: 20rpx;
  font-size: 28rpx;
  color: rgb(255, 255, 255);
  background-color: rgb(100, 221, 237);
}

.box-menu {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-wrap: nowrap;
  background-color: cornflowerblue;
}

.lemar {
  margin-left: 420rpx;
  border-right: 1px solid #000000;
}

.book {
  width: auto;
  height: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  text-align: center;
  margin-top: 10px;
  border: none;
  color: rgb(255, 255, 255);
  background-color: rgb(100, 221, 237);
}