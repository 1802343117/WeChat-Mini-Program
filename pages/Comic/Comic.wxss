/* pages/Comic/Comic.wxss */
.container1 {
  /* height: 1000rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0rpx 20rpx;
  /* background-color: rgb(211, 211, 211); */
}
.block {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-wrap: nowrap;
  position: fixed;
  background-color: rgb(0, 0, 0);
}
.block1 {
  width: 100%;
  margin-top: 140rpx;
  background-color: rgb(0, 204, 255);
}
.block2 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  background-color: rgb(247, 247, 247);
}
.block3 {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  background-color: rgb(0, 0, 0);
}
.block4 {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 140rpx;
  background-color: rgb(247, 247, 247);
}
.listBlock {
  width: 100%;
}
.listBlock-menu {
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: rgb(0, 0, 0);
}
.logo {
  width: 80rpx;
  height: 80rpx;
  margin-top: 8px;
  margin-left: 5px;
}

.input-search {
  width: 440rpx;
  height: 65rpx;
  border: 1px solid #e9e9e9;
  margin-top: 10px;
  margin-left: 40px;
}

.icon-search {
  width: 65rpx;
  height: 65rpx;
  margin-top: 10px;
  margin-left: 15px;
}
.icon-search1 {
  width: 60%;
  height: 80%;
  margin-top: 5px;
}

.book {
  width: 30%;
  height: 300rpx;
  background-color: aliceblue;
  border: 1px solid #000000;
  margin-top: 10px;
}

.bookList {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.book-cover {
  width: auto;
  height: auto;
}

.word {
  color: #e9e9e9;
}

button {
  background-color: black;
}

.slide-image {
  width: 100%;
  height: 100%;
}